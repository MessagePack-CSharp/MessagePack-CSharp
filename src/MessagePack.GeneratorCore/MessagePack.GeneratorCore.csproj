<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <RootNamespace>MessagePackCompiler</RootNamespace>

    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\opensource.snk</AssemblyOriginatorKeyFile>
    <LangVersion>10</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.0.1" />
    <PackageReference Include="StringLiteralGenerator" Version="2.0.0" />
    <PackageReference Include="ZString" Version="2.4.3" />
    <PackageReference Include="RuntimeT4Generator" Version="0.1.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Generator\ResolverTemplate.tt" RuntimeT4Generator="Utf8" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\EnumTemplate.tt" RuntimeT4Generator="Utf8" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\UnionTemplate.tt" RuntimeT4Generator="Utf8" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\FormatterTemplate.tt" RuntimeT4Generator="Utf8" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\StringKey\StringKeyFormatterTemplate.tt" RuntimeT4Generator="Utf8" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MessagePack\MessagePack.csproj" />
  </ItemGroup>
</Project>
