<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>MessagePackCompiler</RootNamespace>

    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\opensource.snk</AssemblyOriginatorKeyFile>
    <LangVersion>9</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.0.1" />
    <PackageReference Include="RuntimeT4Generator" Version="0.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Generator\ResolverTemplate.tt" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\UnionTemplate.tt" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\EnumTemplate.tt" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\FormatterTemplate.tt" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
    <AdditionalFiles Include="Generator\StringKey\StringKeyFormatterTemplate.tt" RuntimeT4Generator_Namespace="MessagePackCompiler.Generator" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MessagePack\MessagePack.csproj" />
  </ItemGroup>

</Project>
